<div class="servers-config-widget dative-widget-center ui-widget
  ui-widget-content ui-corner-all">

  <div class="dative-widget-header header-no-body ui-corner-bottom ui-widget-header
    ui-corner-top dative-tooltip">

    <div class='dative-widget-header-title'>Servers</div>

    <div class='button-container-left'>

      <% if @hideable: %>
        <button class="toggle-appear dative-tooltip" title="show servers">
            <i class='fa fa-caret-right fa-fw'></i>
        </button>
      <% end %>

      <button class="add-server dative-tooltip" title="create a new server">
        <i class='fa fa-plus fa-fw'></i>
      </button>

    </div>

    <div class='button-container-right'>

      <button class="servers-help dative-tooltip" title="Help with servers">
        <i class='fa fa-question fa-fw'></i>
      </button>

    </div>

  </div>

  <div class="dative-widget-body">
    <div class="no-servers-msg">There are no server configurations.</div>
  </div>

</div>

